@model IEnumerable<CodeFirstASPCore6.Models.Student>

@{
    ViewData["Title"] = "Index";
}
@{
    if (TempData["Success"] != null)
    {
        <script>
            $(document).ready(function () {
                // Display a success toast, with a title
                toastr.success('@TempData["Success"]', 'Success');
            });
        </script>
    }
    else if (TempData["Update"] != null)
    {
        <script>
            $(document).ready(function () {
                // Display a success toast, with a title
                toastr.info('@TempData["Update"]', 'Updated');
            });
        </script>
    }
    else if (TempData["Delete"] != null)
    {
        <script>
            $(document).ready(function () {
                // Display a success toast, with a title
                toastr.warning('@TempData["Delete"]', 'Deleted');
            });
        </script>
    }
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Standard)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Standard)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
